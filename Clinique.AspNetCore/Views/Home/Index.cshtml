@model Clinique.Domain.Models.CovidCountry
@{
	ViewData["Title"] = "Home Page";
	var XValues = @Html.Raw(Json.Serialize(Model.Dates));
	var YValues1 = @Html.Raw(Json.Serialize(Model.Cases));
	var YValues2 = @Html.Raw(Json.Serialize(Model.Deaths));
	var DataTitle = @Html.Raw(Json.Serialize(Model.CountryName));
	var MaxValue = Html.Raw(Json.Serialize(Model.Cases.ToArray()[Model.Cases.Count() - 1]));
}
	<div class="row">
		<div class="card col-6">
			<div class="card-body">
				<canvas id="chart">
				</canvas>
			</div>
		</div>
		<div class="col-4 card">
            <div class="card-body">
                <a class="twitter-timeline" height="400px" href="https://twitter.com/Santepub_Mtl?ref_src=twsrc%5Etfw">Santé publique Montréal</a>
            </div>
		</div>
	</div>
@section Scripts {
	<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
	<script>
		var ctx = document.getElementById('chart');
		var chart = new Chart(ctx, {
				type: 'line',
				data: {
					labels: @XValues,
					datasets: [{
						label: 'Nombre de cas',
						borderColor: 'rgba(255, 99, 132)',
						backgroundColor: 'rgba(255, 99, 132, 0.2)',
						fill: false,
						data: @YValues1,
						yAxisID: 'y-axis-1',
					}, {
						label: 'Nombre de morts',
						borderColor: 'rgba(54, 162, 235)',
						backgroundColor: 'rgba(54, 162, 235, 0.2)',
						fill: false,
						data: @YValues2,
						yAxisID: 'y-axis-2'
					}]
				},
				options: {
					responsive: true,
					hoverMode: 'index',
					stacked: false,
					title: {
						display: true,
						text: @DataTitle,
					},
					scales: {
						yAxes: [{
							type: 'linear',
							display: true,
							position: 'left',
							id: 'y-axis-1',
							ticks: {
								beginAtZero: true,

							}
						}, {
							type: 'linear',
							display: false,
							position: 'right',
							id: 'y-axis-2',
							ticks: {
								beginAtZero: true,
								max: @MaxValue,
							},
							gridLines: {
								drawOnChartArea: false,
							},
						}],
					}
				}
			});
	</script>
}

@*options = {
	  aspectRatio: aspectRatio(1, 1.2, 2),
	tooltips: {
	  mode: "index",
	  intersect: false
	},
	responsive: true,
	scales: {
	  xAxes: [
		{
		  gridLines: {
			display: true
		  },
		  offset: true,
		  stacked: false,
		  bounds: 'data',
		  type: "time",
		  time: {
			// unit: "day",
			tooltipFormat: "YYYY-MM-DD",
			displayFormats: {
			  millisecond: "HH:mm:ss.SSS",
			  second: "HH:mm:ss",
			  minute: "HH:mm",
			  hour: "HH",
			  day: "MMM DD"
			}
		  },
		  ticks: {
			fontColor: '#999',
			autoSkip: true,
			autoSkipPadding: 50,
			padding: 0,
			lineHeight: 1,
			major: {
							  enabled: true,
			  fontStyle: 'bold',
						},
		  },*@