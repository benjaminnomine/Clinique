@model Clinique.Domain.Models.RendezVous
<!-- Modal -->
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 id="titreedit" class="modal-title"><label asp-for="Subject" class="control-label"></label></h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form asp-action="Edit" data-ajax="true" asp-controller="Secretaire">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="input-group date" id="datetimepicker6" data-target-input="nearest">
                    <input asp-for="Start" type="datetime-local" class="form-control datetimepicker-input" data-target="#datetimepicker6" />
                    <div class="input-group-append" data-target="#datetimepicker6" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>
                <div class="input-group date" id="datetimepicker7" data-target-input="nearest">
                    <input asp-for="End" type="datetime-local" class="form-control datetimepicker-input" data-target="#datetimepicker7" />
                    <div class="input-group-append" data-target="#datetimepicker7" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                    </div>
                    <span asp-validation-for="End" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ThemeColor" class="control-label"></label>
                    <select asp-for="ThemeColor" class="form-control" asp-items="ViewBag.Couleurs"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdDocteur" class="control-label"></label>
                    <select asp-for="IdDocteur" class="form-control" asp-items="ViewBag.IdDocteur"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdDossierpatient" class="control-label"></label>
                    <select asp-for="IdDossierpatient" class="form-control" asp-items="ViewBag.IdDossier"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sauvegarder" class="btn btn-primary" data-dismiss="modal"/>
                </div>
            </form>
            <div>
                @Html.ActionLink("Supprimer", "Delete", "Secretaire", new { Id = Model.Id }, new { @class = "btn btn-default btn-danger"})
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).on('ready', function (e) {
            $('#datetimepicker7').datetimepicker({
                locale: 'fr-ca'
            });
            $('#datetimepicker8').datetimepicker({
                locale: 'fr-ca'
            });
        })
    </script>
}
